.container
  %h2.field Edit Task
  = form_with(model: @task, url: board_task_path(@task.board), method: 'put', local: true) do |f|
    .field
      = f.label :eyecatch, 'Eyecatch'
    .field
      = f.file_field :eyecatch
    .field
      = f.label :title, 'Name'
    .field
      = f.text_field :title, class: 'text'
    .field
      = f.label :content, 'Description'
    .field
      = f.text_area :content
    .field
      = f.label :deadline, 'Deadline'
    .field
      = f.date_field :deadline, class: 'text'
      = f.submit 'Submit', class: 'btn-primary'
